      "@server/auth/data-access": ["libs/server/auth/data-access/src/index.ts"],
      "@server/auth/feature": ["libs/server/auth/feature/src/index.ts"],
      "@server/auth/utils": ["libs/server/auth/utils/src/index.ts"],
      "@server/shared/configs": ["libs/server/shared/configs/src/index.ts"],
      "@server/shared/dtos": ["libs/server/shared/dtos/src/index.ts"],
      "@server/shared/dtos/account": [
        "libs/server/shared/dtos/src/lib/account/index.ts"
      ],
      "@server/shared/dtos/conversation": [
        "libs/server/shared/dtos/src/lib/conversation/index.ts"
      ],
      "@server/shared/dtos/message": [
        "libs/server/shared/dtos/src/lib/message/index.ts"
      ],
      "@server/shared/dtos/profile": [
        "libs/server/shared/dtos/src/lib/profile/index.ts"
